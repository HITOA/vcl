#ifndef TOK
    #define TOK(x)
#endif
#ifndef PUNCTUATOR
    #define PUNCTUATOR(x, y) TOK(x)
#endif
#ifndef KEYWORD
    #define KEYWORD(x) TOK(Keyword_ ## x)
#endif

TOK(Unknown)
TOK(EndOfLine)
TOK(Comment)
TOK(Identifier)
TOK(NumericConstant)
TOK(StringLiteral)

PUNCTUATOR(Semicolon,       ";")
PUNCTUATOR(LeftPar,         "(")
PUNCTUATOR(RightPar,        ")")
PUNCTUATOR(LeftSquare,      "[")
PUNCTUATOR(RightSquare,     "]")
PUNCTUATOR(LeftBrace,       "{")
PUNCTUATOR(RightBrace,      "}")
PUNCTUATOR(Period,          ".")
PUNCTUATOR(Coma,            ",")
PUNCTUATOR(At,              "@")
PUNCTUATOR(Asterisk,        "*")
PUNCTUATOR(Slash,           "/")
PUNCTUATOR(Percent,         "%")
PUNCTUATOR(Plus,            "+")
PUNCTUATOR(Minus,           "-")
PUNCTUATOR(Greater,         ">")
PUNCTUATOR(Lesser,          "<")
PUNCTUATOR(Exclaim,         "!")
PUNCTUATOR(Equal,           "=")
PUNCTUATOR(GreaterEqual,    ">=")
PUNCTUATOR(LesserEqual,     "<=")
PUNCTUATOR(EqualEqual,      "==")
PUNCTUATOR(ExclaimEqual,    "!=")
PUNCTUATOR(AmpAmp,          "&&")
PUNCTUATOR(PipePipe,        "||")
PUNCTUATOR(PlusPlus,        "++")
PUNCTUATOR(MinusMinus,      "--")

KEYWORD(return)
KEYWORD(if)
KEYWORD(else)
KEYWORD(do)
KEYWORD(while)
KEYWORD(for)
KEYWORD(break)
KEYWORD(struct)
